<%= link_to "Back to Recipes", recipes_path %>
<h1><%= @recipe.name %></h1>
<p><%= @recipe.description %></p>
<ul>
  <li><%= link_to "Edit", edit_recipe_path(@recipe) %></li>
  <li><%= link_to "Destroy", recipe_path(@recipe), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>
<h2>Items</h2>
<table>
  <thead>
    <tr>
      <th>Item Name</th>
      <th>Description</th>
      <th>Amount Type</th>
      <th>Amount</th>
      <th>Price</th>
      <th>Grocery Type</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <%= render @recipe.items %>
  </tbody>
</table>
<h2>Add an Item:</h2>
<%= render 'items/form' %>
