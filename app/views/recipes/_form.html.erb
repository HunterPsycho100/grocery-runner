<%= form_with model: @recipe do |form| %>
  <%= link_to "Cancel", recipes_path %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @recipe.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% @recipe.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
